package repositories;

import java.util.ArrayList;
import java.util.List;

import org.springframework.stereotype.Repository;


  @Repository
public class SpeakerRepository {

	  private static List<Speaker> speakers = new ArrayList<>(3);

	  static {
	    speakers.add(new Speaker(1, "Edsger Dijkstra", "11-111-111"));
	    speakers.add(new Speaker(2, "Ada Lovelace", "22-222-222"));
	    speakers.add(new Speaker(3, "Alan Turing", "33-333-333"));
	  }

	  public Speaker findById(int id) {
	    for (Speaker c : speakers) {
	      if (c.getId() == id) {
	        return c;
	      }
	    }
	    return null;
	  }
}
