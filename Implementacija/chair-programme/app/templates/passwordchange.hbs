{{ember-notify closeAfter=5000}}

<div class="container">
<div class="row">
  <h1 class="bg-txt">Change password</h1>
  <form >
    <div class="form-group">
      <label for="inputPassword">Password</label>
      {{input type="password" class="form-control"  value=oldpass id="inputPassword" placeholder="Password"}}
      {{#if oldPasswordGreska}}
          <span class="help-block">Incorrect password!</span>
          {{/if}}
    </div>
    <div class="form-group">
      <label for="inputPassword">New Password</label>
      {{input type="password" class="form-control" value=password id="inputNewPassword" placeholder="New Password"}}
      {{#if passwordGreska}}
          <span class="help-block">  Must be between 8 and 20 characters, including at least one number! </span>
      {{/if}}
    </div>
    <div class="form-group">
      <label for="inputPassword">Confirm New Password</label>
      {{input type="password" class="form-control" value=passwordConfirm id="confirmNewPassword" placeholder="New Password"}}
      {{#if passwordConfirmGreska}}
          <span class="help-block"> Incorrect password! </span>
      {{/if}}
    </div>

    <button type="submit" class="btn btn-primary" {{action 'update' oldpass password passwordConfirm}}>Submit</button>
  </form>
<br><br>
</div>
</div>

{{ sponsors-section }}
