{{log model.results}}
{{log model.role}}

<section>
  <div class="container">
    <div class = "row">
      <h1 class = "bg-txt">Registered Users </h1>
    </div>
  </div>
</section>
<div class="container">
  <div class="row">
    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        {{input value=name placeholder="Search"}}
      </div>
      <button type="submit" class="btn btn-default"  {{action 'searchUsers' name}}>Submit</button>
    </form>
  </div>
</div>

{{#each model.results as |result|}}

<section>
  <div class="container">
    <div class = "row">
      {{#link-to "users.show" result.id}}  <h2 class = "md-txt">  {{result.id}}. {{result.firstName}} {{result.lastName}}</h2> {{/link-to}}
      <p class = "sm-txt" align = "justify"><b>Email:  </b> {{result.email}}</p>
      <p class = "sm-txt" align = "justify"><b>Role: </b>{{result.roleId.roleName}} </p>
      <p class = "sm-txt" align = "justify"><b>City:  </b> {{result.city}}</p>
      <p class = "sm-txt" align = "justify"><b>State:  </b> {{result.state}}</p>
      <p class = "sm-txt" align = "justify"><b>Function:  </b> {{result.function}}</p>
    </div>
  </div>
</section>
{{/each}}

{{#each model.users as |model|}}

<section>
  <div class="container">
    <div class = "row">
      {{#link-to "users.show" model.id}}  <h2 class = "md-txt">  {{model.id}}. {{model.firstName}} {{model.lastName}}</h2> {{/link-to}}
      <p class = "sm-txt" align = "justify"><b>Email:  </b> {{model.email}}</p>
      <p class = "sm-txt" align = "justify"><b>Role: </b>{{model.roleId.roleName}} </p>
      <p class = "sm-txt" align = "justify"><b>City:  </b> {{model.city}}</p>
      <p class = "sm-txt" align = "justify"><b>State:  </b> {{model.state}}</p>
      <p class = "sm-txt" align = "justify"><b>Function:  </b> {{model.function}}</p>

    </div>
  </div>
</section>
{{/each}}
